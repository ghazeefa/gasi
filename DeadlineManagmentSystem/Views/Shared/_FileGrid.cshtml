@model IEnumerable<DeadlineManagmentSystem.Models.GridModel>

@using GridMvc.Html


<div class="code-cut" >
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Id).Titled("File Id");
    columns.Add(c => c.CompanyName).Titled("Company");
    columns.Add(c => c.BranchName).Titled("Branch");
    columns.Add(c => c.DepartmentName).Titled("Department");
    columns.Add(c => c.FileCategoryName).Titled("File Category");
    columns.Add(c => c.FileTypeName).Titled("File Type");
    //columns.Add(c => c.Path).Titled("Path").Filterable(true);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.Id }));

}).WithPaging(2)
</div>  